{
    "expo": {
        "name": "Six22",
        "slug": "six22",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/icon.png",
        "scheme": "six22",
        "userInterfaceStyle": "dark",
        "splash": {
            "image": "./assets/splash.png",
            "resizeMode": "contain",
            "backgroundColor": "#0A0908"
        },
        "assetBundlePatterns": [
            "**/*"
        ],
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "app.six22.mobile",
            "buildNumber": "1",
            "infoPlist": {
                "NSCameraUsageDescription": "Allow Six22 to access your camera to create posts and moments",
                "NSPhotoLibraryUsageDescription": "Allow Six22 to access your photos to share with your community",
                "NSMicrophoneUsageDescription": "Allow Six22 to access your microphone to record videos and voice messages"
            }
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/adaptive-icon.png",
                "backgroundColor": "#0A0908"
            },
            "package": "app.six22.mobile",
            "versionCode": 1,
            "permissions": [
                "CAMERA",
                "READ_EXTERNAL_STORAGE",
                "WRITE_EXTERNAL_STORAGE",
                "RECORD_AUDIO"
            ]
        },
        "web": {
            "bundler": "metro",
            "output": "static",
            "favicon": "./assets/favicon.png"
        },
        "plugins": [
            "expo-router",
            "expo-font",
            [
                "expo-camera",
                {
                    "cameraPermission": "Allow Six22 to access your camera to create amazing content."
                }
            ],
            [
                "expo-image-picker",
                {
                    "photosPermission": "Allow Six22 to access your photos to share with your community."
                }
            ]
        ],
        "experiments": {
            "typedRoutes": true
        },
        "extra": {
            "eas": {
                "projectId": "your-project-id-here"
            }
        },
        "owner": "six22app"
    }
}