{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "cd apps/server && npm install && npm run build"
    },
    "deploy": {
        "startCommand": "cd apps/server && npm run start",
        "healthcheckPath": "/health",
        "restartPolicyType": "ON_FAILURE"
    }
}