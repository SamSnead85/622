{
  "expo": {
    "name": "0G",
    "slug": "zerog",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "zerog",
    "userInterfaceStyle": "dark",
    "jsEngine": "hermes",
    "description": "Privacy-first community platform. No ads. No algorithms. No surveillance. Private groups, encrypted messaging, live streaming, cultural tools, and community boards â€” all in one place.",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.zerog.social",
      "buildNumber": "1",
      "config": {
        "usesNonExemptEncryption": false
      },
      "associatedDomains": [
        "applinks:0gravity.ai",
        "applinks:*.0gravity.ai"
      ],
      "entitlements": {
        "com.apple.developer.applesignin": [
          "Default"
        ],
        "com.apple.developer.associated-domains": [
          "applinks:0gravity.ai",
          "applinks:*.0gravity.ai"
        ]
      },
      "infoPlist": {
        "NSCameraUsageDescription": "Allow 0G to access your camera to create posts and share with your community",
        "NSPhotoLibraryUsageDescription": "Allow 0G to access your photos to share with your private groups",
        "NSMicrophoneUsageDescription": "Allow 0G to access your microphone to record videos and voice messages",
        "NSLocationWhenInUseUsageDescription": "Allow 0G to access your location for prayer times and Qibla direction",
        "NSFaceIDUsageDescription": "Allow 0G to use Face ID for quick and secure sign-in",
        "NSUserNotificationsUsageDescription": "0G sends you notifications about messages, posts, and community updates",
        "ITSAppUsesNonExemptEncryption": false
      },
      "privacyManifests": {
        "NSPrivacyAccessedAPITypes": [
          {
            "NSPrivacyAccessedAPIType": "NSPrivacyAccessedAPICategoryUserDefaults",
            "NSPrivacyAccessedAPITypeReasons": [
              "CA92.1"
            ]
          }
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.zerog.social",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Allow 0G to access your location for prayer times and Qibla direction."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow 0G to access your camera to create posts."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow 0G to access your photos to share with your community."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#000000"
        }
      ],
      "@sentry/react-native",
      "expo-apple-authentication",
      "expo-web-browser"
    ],
    "updates": {
      "url": "https://u.expo.dev/REPLACE_WITH_PROJECT_ID",
      "enabled": true,
      "fallbackToCacheTimeout": 0
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      }
    }
  }
}
