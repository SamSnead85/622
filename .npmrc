# Skip postinstall scripts during npm install
# Required because react-native-screens runs 'bob build' which needs native tools
# This only affects install, not the actual build
ignore-scripts=true

# Allow peer dependency mismatches between mobile (react@18.2/RN 0.74) and web (react@19/Next.js)
# Required for monorepo where mobile and web have different React versions
legacy-peer-deps=true
