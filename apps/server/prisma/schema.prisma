model DeveloperApp {
  id            String   @id @default(uuid())
  ownerId       String
  name          String
  slug          String   @unique
  description   String?
  websiteUrl    String?
  callbackUrl   String?               // OAuth2 redirect URI
  logoUrl       String?
  clientId      String   @unique @default(uuid())
  clientSecret  String                 // Hashed
  scopes        String   @default("read")  // Comma-separated: read,write,communities,messages,calls
  isApproved    Boolean  @default(true)    // Auto-approve for now
  isActive      Boolean  @default(true)
  rateLimitTier String   @default("free")  // free, pro, enterprise
  requestCount  Int      @default(0)
  lastUsedAt    DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  apiKeys       ApiKey[]
  webhooks      Webhook[]
  oauthTokens   OAuthToken[]

  @@index([ownerId])
  @@index([clientId])
}

model ApiKey {
  id           String   @id @default(uuid())
  appId        String
  name         String   @default("Default")
  keyHash      String   @unique           // SHA-256 of the key (never store raw)
  keyPrefix    String                      // First 8 chars for identification
  scopes       String   @default("read")
  isActive     Boolean  @default(true)
  expiresAt    DateTime?
  lastUsedAt   DateTime?
  requestCount Int      @default(0)
  createdAt    DateTime @default(now())
  app          DeveloperApp @relation(fields: [appId], references: [id], onDelete: Cascade)

  @@index([appId])
  @@index([keyHash])
}

model OAuthToken {
  id            String   @id @default(uuid())
  appId         String
  userId        String
  accessToken   String   @unique
  refreshToken  String?  @unique
  scopes        String
  expiresAt     DateTime
  createdAt     DateTime @default(now())
  app           DeveloperApp @relation(fields: [appId], references: [id], onDelete: Cascade)

  @@index([appId])
  @@index([userId])
  @@index([accessToken])
}

model Webhook {
  id          String   @id @default(uuid())
  appId       String
  url         String
  secret      String               // For HMAC signature verification
  events      String               // Comma-separated: post.created, member.joined, etc.
  isActive    Boolean  @default(true)
  failCount   Int      @default(0)
  lastFiredAt DateTime?
  createdAt   DateTime @default(now())
  app         DeveloperApp @relation(fields: [appId], references: [id], onDelete: Cascade)

  @@index([appId])
}

model WebhookLog {
  id         String   @id @default(uuid())
  webhookId  String
  event      String
  payload    String               // JSON stringified
  statusCode Int?
  response   String?
  success    Boolean  @default(false)
  firedAt    DateTime @default(now())

  @@index([webhookId])
  @@index([firedAt])
}

// ============================================
// EARLY ACCESS & INVITE CODES
// ============================================

model EarlyAccessRequest {
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  reason      String   @db.Text      // Why they want to join
  role        String?                 // What they do (developer, community builder, etc.)
  socialUrl   String?                 // Optional social media link
  status      String   @default("pending") // pending | approved | rejected
  accessCode  String?  @unique       // Generated when approved
  createdAt   DateTime @default(now())
  reviewedAt  DateTime?

  @@index([status])
  @@index([email])
}

model AccessCode {
  id          String    @id @default(uuid())
  code        String    @unique
  type        String    @default("early_access") // early_access | founder_invite | admin | campaign | creator
  maxUses     Int       @default(1)
  useCount    Int       @default(0)
  expiresAt   DateTime?
  createdById String?
  campaignId  String?
  createdAt   DateTime  @default(now())
  isActive    Boolean   @default(true)
  campaign    Campaign? @relation(fields: [campaignId], references: [id])

  @@index([code])
  @@index([isActive])
  @@index([campaignId])
}

// ============================================
// CAMPAIGNS & SPONSORSHIPS
// ============================================
model Campaign {
  id             String           @id @default(uuid())
  slug           String           @unique
  title          String
  description    String           @db.Text
  type           String           @default("event")  // event | sponsorship | partnership | fundraiser | raffle
  status         String           @default("draft")  // draft | active | ended | cancelled
  // Visual
  coverUrl       String?
  logoUrl        String?
  brandColor     String?          @default("#00D4FF")
  // Event details
  eventDate      DateTime?
  eventLocation  String?
  eventCity      String?
  // Incentives
  incentiveType  String?          // raffle | gift_card | early_access | badge | custom
  incentiveValue String?          // "$100 Gift Card" or "Founder Badge"
  incentiveRules String?          @db.Text  // Description of how to win
  raffleDrawDate DateTime?
  // Tracking
  signupGoal     Int              @default(100)
  signupCount    Int              @default(0)
  viewCount      Int              @default(0)
  // Organization
  partnerName    String?          // "Tampa Bay Muslim Community"
  partnerLogo    String?
  partnerUrl     String?
  // Metadata
  createdById    String
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  expiresAt      DateTime?
  // Relations
  signups        CampaignSignup[]
  accessCodes    AccessCode[]

  @@index([slug])
  @@index([status])
  @@index([type])
}

model CampaignSignup {
  id          String   @id @default(uuid())
  campaignId  String
  name        String
  email       String
  phone       String?
  source      String?  // qr | link | social | referral
  referredBy  String?  // referral code of person who shared
  isConverted Boolean  @default(false) // signed up for platform
  userId      String?  // linked when they create account
  createdAt   DateTime @default(now())
  campaign    Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)

  @@unique([campaignId, email])
  @@index([campaignId])
  @@index([email])
}

// ============================================
// CREATOR / AMBASSADOR PROGRAM
// ============================================
model CreatorProfile {
  id              String   @id @default(uuid())
  userId          String   @unique
  tier            String   @default("ambassador") // ambassador | creator | partner | elite
  status          String   @default("pending")    // pending | approved | active | suspended
  // Platform presence
  platform        String?  // instagram | tiktok | youtube | twitter | podcast | other
  platformHandle  String?
  followerCount   Int      @default(0)
  contentNiche    String?  // food, fashion, faith, comedy, education, etc.
  // Referral tracking
  referralCode    String   @unique
  totalReferrals  Int      @default(0)
  activeReferrals Int      @default(0) // users who stayed active 30+ days
  // Incentives
  earlyAccessSlots Int     @default(10) // how many early access codes they can give out
  slotsUsed        Int     @default(0)
  hasVerifiedBadge Boolean @default(false)
  hasPrioritySupport Boolean @default(false)
  // Agreement
  agreedToTerms   Boolean  @default(false)
  agreedAt        DateTime?
  // Metadata
  bio             String?  @db.Text
  applicationNote String?  @db.Text
  reviewedBy      String?
  reviewedAt      DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([tier])
  @@index([status])
  @@index([referralCode])
}

// ============================================
// REFERRAL REWARDS
// ============================================
model ReferralReward {
  id          String   @id @default(uuid())
  userId      String   // person earning the reward
  type        String   // signup_bonus | milestone_5 | milestone_25 | milestone_100 | raffle_entry
  description String
  value       String?  // "$10 credit" or "Founder Badge" or "1 Raffle Entry"
  status      String   @default("pending") // pending | fulfilled | expired
  referralId  String?  // the invite that triggered this
  createdAt   DateTime @default(now())
  fulfilledAt DateTime?

  @@index([userId])
  @@index([status])
}

// ============================================
// GROWTH PARTNER PROGRAM
// ============================================
model GrowthPartner {
  id                              String   @id @default(uuid())
  userId                          String   @unique
  status                          String   @default("active") // active | paused | suspended | graduated
  enrolledAt                      DateTime @default(now())
  paymentEmail                    String?
  paymentMethod                   String   @default("manual") // manual | paypal | stripe | crypto
  legalName                       String?
  country                         String?
  totalEarned                     Float    @default(0)
  totalPaid                       Float    @default(0)
  pendingPayout                   Float    @default(0)
  directReferralsQualified        Int      @default(0)
  secondLevelReferralsQualified   Int      @default(0)
  tier                            String   @default("affiliate") // affiliate | community_leader | cofounder_track
  referralCode                    String   @unique
  createdAt                       DateTime @default(now())
  updatedAt                       DateTime @updatedAt

  user       User     @relation(fields: [userId], references: [id])
  referrals  GrowthReferral[]
  earnings   Earning[]

  @@index([status])
  @@index([tier])
  @@index([referralCode])
}

model GrowthReferral {
  id                String    @id @default(uuid())
  growthPartnerId   String
  referredUserId    String
  referralLevel     String    @default("direct") // direct | second_level
  parentReferralId  String?
  status            String    @default("pending") // pending | qualified | inactive | flagged
  invitedAt         DateTime  @default(now())
  qualifiedAt       DateTime?
  daysActive        Int       @default(0)
  lastActiveAt      DateTime?
  rewardAmount      Float     @default(0)
  rewardPaid        Boolean   @default(false)
  flagReason        String?   // ip_duplicate | disposable_email | suspicious_timing | superficial_engagement

  growthPartner     GrowthPartner    @relation(fields: [growthPartnerId], references: [id], onDelete: Cascade)
  parentReferral    GrowthReferral?  @relation("SecondLevel", fields: [parentReferralId], references: [id])
  childReferrals    GrowthReferral[] @relation("SecondLevel")
  earnings          Earning[]

  @@index([growthPartnerId])
  @@index([referredUserId])
  @@index([status])
  @@index([parentReferralId])
}

model Earning {
  id              String    @id @default(uuid())
  growthPartnerId String
  referralId      String?
  type            String    @default("direct_referral") // direct_referral | second_level_referral | bonus | adjustment
  amount          Float
  status          String    @default("pending") // pending | approved | paid | cancelled
  earnedAt        DateTime  @default(now())
  approvedAt      DateTime?
  paidAt          DateTime?
  note            String?

  growthPartner   GrowthPartner    @relation(fields: [growthPartnerId], references: [id], onDelete: Cascade)
  referral        GrowthReferral?  @relation(fields: [referralId], references: [id])

  @@index([growthPartnerId])
  @@index([status])
  @@index([earnedAt])
}

// ============================================
// MULTIPLAYER GAMES
// ============================================

model GameSession {
  id          String       @id @default(uuid())
  code        String       @unique
  type        String
  hostId      String
  status      String       @default("lobby")
  settings    Json         @default("{}")
  finalScores Json?
  players     GamePlayer[]
  createdAt   DateTime     @default(now())
  finishedAt  DateTime?

  @@index([code])
  @@index([status])
}

model GamePlayer {
  id          String       @id @default(uuid())
  sessionId   String
  session     GameSession  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  userId      String?
  guestName   String?
  score       Int          @default(0)
  isHost      Boolean      @default(false)
  joinedAt    DateTime     @default(now())

  @@index([sessionId])
  @@index([userId])
}

model DailyChallenge {
  id          String       @id @default(uuid())
  date        DateTime     @unique
  questions   Json
  createdAt   DateTime     @default(now())
  scores      DailyScore[]
}

model DailyScore {
  id          String         @id @default(uuid())
  userId      String
  challengeId String
  challenge   DailyChallenge @relation(fields: [challengeId], references: [id])
  score       Int
  streak      Int            @default(0)
  completedAt DateTime       @default(now())

  @@unique([userId, challengeId])
  @@index([userId])
}

// ============================================
// Community Gamification
// ============================================

model PointTransaction {
  id          String    @id @default(uuid())
  communityId String
  userId      String
  points      Int
  reason      String    // post, comment, like_received, course_complete, event_attend, admin_award
  sourceType  String?   // post, comment, like, lesson, event
  sourceId    String?
  createdAt   DateTime  @default(now())
  community   Community @relation(fields: [communityId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([communityId, userId])
  @@index([communityId, createdAt(sort: Desc)])
  @@index([userId])
}

// ============================================
// Community Classroom / Courses
// ============================================

model Course {
  id            String         @id @default(uuid())
  communityId   String
  title         String
  description   String?
  coverUrl      String?
  order         Int            @default(0)
  isPublished   Boolean        @default(false)
  requiredLevel Int            @default(0)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  community     Community      @relation(fields: [communityId], references: [id], onDelete: Cascade)
  modules       CourseModule[]

  @@index([communityId, order])
  @@index([communityId, isPublished])
}

model CourseModule {
  id          String         @id @default(uuid())
  courseId     String
  title       String
  description String?
  order       Int            @default(0)
  createdAt   DateTime       @default(now())
  course      Course         @relation(fields: [courseId], references: [id], onDelete: Cascade)
  lessons     CourseLesson[]

  @@index([courseId, order])
}

model CourseLesson {
  id           String           @id @default(uuid())
  moduleId     String
  title        String
  content      String?          // Rich text / markdown
  videoUrl     String?
  thumbnailUrl String?
  duration     Int?             // seconds
  resources    Json?            // [{name, url, type}]
  order        Int              @default(0)
  createdAt    DateTime         @default(now())
  module       CourseModule     @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  progress     LessonProgress[]

  @@index([moduleId, order])
}

model LessonProgress {
  id             String       @id @default(uuid())
  lessonId       String
  userId         String
  completed      Boolean      @default(false)
  watchedSeconds Int          @default(0)
  completedAt    DateTime?
  updatedAt      DateTime     @updatedAt
  lesson         CourseLesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([lessonId, userId])
  @@index([userId])
}

// ============================================
// Community Calendar / Events
// ============================================

model CommunityEvent {
  id            String      @id @default(uuid())
  communityId   String
  creatorId     String
  title         String
  description   String?
  startAt       DateTime
  endAt         DateTime?
  timezone      String      @default("America/New_York")
  location      String?
  isVirtual     Boolean     @default(false)
  meetingUrl    String?
  coverUrl      String?
  maxAttendees  Int?
  isRecurring   Boolean     @default(false)
  recurrenceRule String?    // RRULE format
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  community     Community   @relation(fields: [communityId], references: [id], onDelete: Cascade)
  creator       User        @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  rsvps         EventRSVP[]

  @@index([communityId, startAt])
  @@index([communityId, createdAt(sort: Desc)])
  @@index([creatorId])
}

model EventRSVP {
  id        String         @id @default(uuid())
  eventId   String
  userId    String
  status    String         @default("going") // going, maybe, not_going
  createdAt DateTime       @default(now())
  event     CommunityEvent @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([eventId, userId])
  @@index([eventId])
  @@index([userId])
}
