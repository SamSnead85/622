generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ============================================
// USER & AUTH
// ============================================

enum Role {
  USER
  MODERATOR
  ADMIN
  SUPERADMIN
}

model User {
  id              String    @id @default(uuid())
  email           String    @unique
  phone           String?   @unique
  username        String    @unique
  displayName     String
  displayNameSecondary String?   // Name in secondary language (Arabic, Chinese, etc.)
  secondaryLanguage    String?   // Language code: 'ar', 'zh', 'hi', 'ja', 'ko', etc.
  bio             String?
  website         String?
  avatarUrl       String?
  coverUrl        String?
  passwordHash    String?
  role            Role      @default(USER)
  isVerified      Boolean   @default(false)
  isPrivate       Boolean   @default(false)
  isBanned        Boolean   @default(false)
  lastActiveAt    DateTime  @default(now())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  // Password Reset
  resetToken       String?
  resetTokenExpiry DateTime?

  // Relations
  posts           Post[]
  comments        Comment[]
  likes           Like[]
  shares          Share[]
  saves           Save[]
  
  // Social
  followers       Follow[]  @relation("Following")
  following       Follow[]  @relation("Followers")
  
  // Communities
  communityMemberships CommunityMember[]
  createdCommunities   Community[]       @relation("CommunityCreator")
  
  // Messaging
  sentMessages    Message[] @relation("MessageSender")
  conversations   ConversationParticipant[]
  
  // Notifications
  notifications   Notification[]
  
  // Auth
  sessions        Session[]
  oauthAccounts   OAuthAccount[]
  
  // Migration
  migrations      Migration[]
  importedConnections PendingConnection[] @relation("ImportedConnections")
  matchedConnections  PendingConnection[] @relation("MatchedConnections")
  sentInvites     Invite[]               @relation("SentInvites")
  joinedViaInvite Invite?                @relation("JoinedViaInvite")
  
  // Moments (Stories)
  moments         Moment[]
  momentViews     MomentView[]
  
  // Live Streaming (Campfire)
  liveStreams     LiveStream[]
  liveStreamChats LiveStreamChat[]

  @@index([username])
  @@index([email])
}

model Session {
  id           String   @id @default(uuid())
  userId       String
  token        String   @unique
  deviceType   String?
  deviceName   String?
  ipAddress    String?
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
}

model OAuthAccount {
  id           String   @id @default(uuid())
  userId       String
  provider     String   // google, apple
  providerId   String
  accessToken  String?
  refreshToken String?
  createdAt    DateTime @default(now())
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerId])
  @@index([userId])
}

// ============================================
// MOMENTS (STORIES - 24hr ephemeral content)
// ============================================

model Moment {
  id           String       @id @default(uuid())
  userId       String
  type         MomentType   @default(IMAGE)
  mediaUrl     String
  thumbnailUrl String?
  duration     Int?         // For video moments, duration in seconds
  caption      String?      @db.Text
  musicId      String?
  viewCount    Int          @default(0)
  expiresAt    DateTime     // Set to 24 hours from creation
  isActive     Boolean      @default(true)
  createdAt    DateTime     @default(now())
  
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  music        Music?       @relation(fields: [musicId], references: [id])
  views        MomentView[]

  @@index([userId])
  @@index([expiresAt])
  @@index([createdAt])
}

enum MomentType {
  IMAGE
  VIDEO
  TEXT
}

model MomentView {
  id        String   @id @default(uuid())
  momentId  String
  userId    String
  viewedAt  DateTime @default(now())
  
  moment    Moment   @relation(fields: [momentId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([momentId, userId])
  @@index([momentId])
  @@index([userId])
}

// ============================================
// LIVE STREAMING (CAMPFIRE)
// ============================================

model LiveStream {
  id              String           @id @default(uuid())
  userId          String
  title           String
  description     String?          @db.Text
  thumbnailUrl    String?
  streamKey       String           @unique @default(uuid())
  playbackUrl     String?
  status          LiveStreamStatus @default(SCHEDULED)
  viewerCount     Int              @default(0)
  peakViewerCount Int              @default(0)
  totalViews      Int              @default(0)
  startedAt       DateTime?
  endedAt         DateTime?
  scheduledFor    DateTime?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  
  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  chatMessages    LiveStreamChat[]

  @@index([userId])
  @@index([status])
  @@index([startedAt])
}

enum LiveStreamStatus {
  SCHEDULED
  LIVE
  ENDED
  CANCELLED
}

model LiveStreamChat {
  id           String     @id @default(uuid())
  streamId     String
  userId       String
  content      String     @db.Text
  type         ChatType   @default(MESSAGE)
  giftType     String?    // For gift messages
  giftAmount   Int?       // Gift value
  createdAt    DateTime   @default(now())
  
  stream       LiveStream @relation(fields: [streamId], references: [id], onDelete: Cascade)
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([streamId])
  @@index([userId])
  @@index([createdAt])
}

enum ChatType {
  MESSAGE
  GIFT
  REACTION
  JOIN
  LEAVE
}

// ============================================
// SOCIAL GRAPH
// ============================================

model Follow {
  id           String   @id @default(uuid())
  followerId   String
  followingId  String
  createdAt    DateTime @default(now())
  
  follower     User     @relation("Followers", fields: [followerId], references: [id], onDelete: Cascade)
  following    User     @relation("Following", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
}

// ============================================
// CONTENT
// ============================================

model Post {
  id           String      @id @default(uuid())
  userId       String
  communityId  String?
  type         PostType    @default(VIDEO)
  caption      String?     @db.Text
  mediaUrl     String?
  thumbnailUrl String?
  duration     Int?        // Video duration in seconds
  musicId      String?
  viewCount    Int         @default(0)
  isPublic     Boolean     @default(true)
  isPinned     Boolean     @default(false)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  
  user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  community    Community?  @relation(fields: [communityId], references: [id], onDelete: SetNull)
  music        Music?      @relation(fields: [musicId], references: [id])
  
  comments     Comment[]
  likes        Like[]
  shares       Share[]
  saves        Save[]
  hashtags     PostHashtag[]

  @@index([userId])
  @@index([communityId])
  @@index([createdAt])
}

enum PostType {
  IMAGE
  VIDEO
  TEXT
  POLL
}

model Music {
  id           String   @id @default(uuid())
  title        String
  artist       String
  audioUrl     String
  duration     Int      // Duration in seconds
  coverUrl     String?
  usageCount   Int      @default(0)
  createdAt    DateTime @default(now())
  
  posts        Post[]
  moments      Moment[]

  @@index([title])
  @@index([artist])
}

model Comment {
  id           String    @id @default(uuid())
  postId       String
  userId       String
  parentId     String?   // For nested replies
  content      String    @db.Text
  likesCount   Int       @default(0)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  
  post         Post      @relation(fields: [postId], references: [id], onDelete: Cascade)
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent       Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies      Comment[] @relation("CommentReplies")

  @@index([postId])
  @@index([userId])
  @@index([parentId])
}

model Like {
  id        String   @id @default(uuid())
  userId    String
  postId    String
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
  @@index([postId])
}

model Share {
  id        String   @id @default(uuid())
  userId    String
  postId    String
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([postId])
}

model Save {
  id        String   @id @default(uuid())
  userId    String
  postId    String
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
  @@index([userId])
}

model Hashtag {
  id        String        @id @default(uuid())
  name      String        @unique
  usageCount Int          @default(0)
  createdAt DateTime      @default(now())
  
  posts     PostHashtag[]

  @@index([name])
}

model PostHashtag {
  id        String   @id @default(uuid())
  postId    String
  hashtagId String
  
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  hashtag   Hashtag  @relation(fields: [hashtagId], references: [id], onDelete: Cascade)

  @@unique([postId, hashtagId])
}

// ============================================
// COMMUNITIES
// ============================================

model Community {
  id          String   @id @default(uuid())
  creatorId   String
  name        String   @unique
  slug        String   @unique
  description String?  @db.Text
  avatarUrl   String?
  coverUrl    String?
  isPublic    Boolean  @default(true)
  memberCount Int      @default(0)
  postCount   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  creator     User              @relation("CommunityCreator", fields: [creatorId], references: [id])
  members     CommunityMember[]
  posts       Post[]
  rules       CommunityRule[]

  @@index([name])
  @@index([slug])
}

model CommunityMember {
  id          String        @id @default(uuid())
  userId      String
  communityId String
  role        CommunityRole @default(MEMBER)
  joinedAt    DateTime      @default(now())
  
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  community   Community     @relation(fields: [communityId], references: [id], onDelete: Cascade)

  @@unique([userId, communityId])
  @@index([communityId])
}

enum CommunityRole {
  MEMBER
  MODERATOR
  ADMIN
}

model CommunityRule {
  id          String    @id @default(uuid())
  communityId String
  title       String
  description String    @db.Text
  order       Int       @default(0)
  createdAt   DateTime  @default(now())
  
  community   Community @relation(fields: [communityId], references: [id], onDelete: Cascade)

  @@index([communityId])
}

// ============================================
// MESSAGING
// ============================================

model Conversation {
  id           String    @id @default(uuid())
  isGroup      Boolean   @default(false)
  groupName    String?
  groupAvatar  String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  
  participants ConversationParticipant[]
  messages     Message[]
}

model ConversationParticipant {
  id             String       @id @default(uuid())
  conversationId String
  userId         String
  lastReadAt     DateTime     @default(now())
  isMuted        Boolean      @default(false)
  joinedAt       DateTime     @default(now())
  
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([conversationId, userId])
  @@index([userId])
}

model Message {
  id             String        @id @default(uuid())
  conversationId String
  senderId       String
  content        String        @db.Text
  mediaUrl       String?
  mediaType      MessageMedia?
  isEdited       Boolean       @default(false)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  
  conversation   Conversation  @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender         User          @relation("MessageSender", fields: [senderId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@index([senderId])
  @@index([createdAt])
}

enum MessageMedia {
  IMAGE
  VIDEO
  AUDIO
  FILE
}

// ============================================
// NOTIFICATIONS
// ============================================

model Notification {
  id        String           @id @default(uuid())
  userId    String
  type      NotificationType
  actorId   String?
  targetId  String?          // Post, Comment, Community, etc.
  message   String
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())
  
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}

enum NotificationType {
  LIKE
  COMMENT
  FOLLOW
  MENTION
  COMMUNITY_INVITE
  COMMUNITY_POST
  MESSAGE
  SYSTEM
}

// ============================================
// PLATFORM MIGRATION
// ============================================

model Migration {
  id            String          @id @default(uuid())
  userId        String
  platform      MigrationPlatform
  status        MigrationStatus @default(PENDING)
  filePath      String?         // Path to uploaded export file
  stats         Json?           // Import statistics
  errorMessage  String?
  createdAt     DateTime        @default(now())
  startedAt     DateTime?
  completedAt   DateTime?
  
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  importedPosts ImportedPost[]
  pendingConnections PendingConnection[]

  @@index([userId])
  @@index([status])
}

enum MigrationPlatform {
  INSTAGRAM
  TIKTOK
  TWITTER
  FACEBOOK
  WHATSAPP
}

enum MigrationStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}

model ImportedPost {
  id                String      @id @default(uuid())
  migrationId       String
  originalPlatform  String
  originalId        String?     // ID on original platform
  originalTimestamp DateTime?   // When created on original platform
  
  // Content (normalized to Caravan format)
  type              PostType    @default(IMAGE)
  caption           String?     @db.Text
  mediaUrls         String[]    // Array of media URLs
  location          String?
  tags              String[]    // Hashtags
  
  // Status
  importStatus      ImportStatus @default(PENDING)
  caravanPostId     String?     // Created Caravan post ID
  errorMessage      String?
  
  createdAt         DateTime    @default(now())
  
  migration         Migration   @relation(fields: [migrationId], references: [id], onDelete: Cascade)

  @@index([migrationId])
  @@index([importStatus])
}

enum ImportStatus {
  PENDING
  IMPORTING
  COMPLETED
  SKIPPED
  FAILED
}

model PendingConnection {
  id                String      @id @default(uuid())
  userId            String      // The Caravan user who imported
  migrationId       String?
  platform          MigrationPlatform
  
  // Original platform identity
  originalUsername  String
  displayName       String?
  profileImageUrl   String?
  
  // Contact info for inviting
  email             String?
  phone             String?
  
  // Caravan matching
  matchedUserId     String?     // If matched to existing Caravan user
  matchConfidence   Int?        // 0-100 confidence score
  
  // Relationship type
  connectionType    ConnectionType @default(FOLLOWER)
  
  // Invite status
  inviteStatus      InviteStatus @default(NOT_SENT)
  inviteSentAt      DateTime?
  inviteMethod      InviteMethod?
  
  createdAt         DateTime    @default(now())
  
  user              User        @relation("ImportedConnections", fields: [userId], references: [id], onDelete: Cascade)
  migration         Migration?  @relation(fields: [migrationId], references: [id], onDelete: SetNull)
  matchedUser       User?       @relation("MatchedConnections", fields: [matchedUserId], references: [id])

  @@index([userId])
  @@index([inviteStatus])
  @@index([originalUsername])
}

enum ConnectionType {
  FOLLOWER
  FOLLOWING
  MUTUAL
  CONTACT
}

enum InviteStatus {
  NOT_SENT
  SENT
  REMINDED
  OPENED
  JOINED
  DECLINED
  BOUNCED
}

enum InviteMethod {
  EMAIL
  SMS
  LINK
}

model Invite {
  id              String        @id @default(uuid())
  senderId        String
  recipientEmail  String?
  recipientPhone  String?
  method          InviteMethod
  status          InviteStatus  @default(SENT)
  referralCode    String        @unique
  message         String?       // Custom message
  
  // Tracking
  createdAt       DateTime      @default(now())
  sentAt          DateTime      @default(now())
  openedAt        DateTime?
  joinedAt        DateTime?
  joinedUserId    String?       @unique // User who joined via this invite
  
  sender          User          @relation("SentInvites", fields: [senderId], references: [id], onDelete: Cascade)
  joinedUser      User?         @relation("JoinedViaInvite", fields: [joinedUserId], references: [id])

  @@index([senderId])
  @@index([referralCode])
  @@index([status])
}

// ============================================
// TERRITORY SYSTEM (Circle → Clan → Tribe → Nation)
// Hierarchical sovereignty model
// ============================================

model Territory {
  id              String           @id @default(uuid())
  name            String
  slug            String           @unique
  description     String?          @db.Text
  type            TerritoryType
  avatarUrl       String?
  coverUrl        String?
  
  // Theme/Branding
  primaryColor    String?          @default("#D4AF37")
  
  // Privacy
  isPublic        Boolean          @default(false)
  requireApproval Boolean          @default(true)
  
  // Hierarchy
  parentId        String?          // For nesting (Circle in Clan, Clan in Tribe, etc.)
  
  // Stats
  memberCount     Int              @default(0)
  postCount       Int              @default(0)
  
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  
  // Relations
  parent          Territory?       @relation("TerritoryHierarchy", fields: [parentId], references: [id], onDelete: SetNull)
  children        Territory[]      @relation("TerritoryHierarchy")
  
  members         TerritoryMember[]
  posts           TerritoryPost[]
  algorithmSettings TerritoryAlgorithmSettings?
  
  // Connections to other territories
  outgoingConnections TerritoryConnection[] @relation("ConnectionFrom")
  incomingConnections TerritoryConnection[] @relation("ConnectionTo")
  
  // Moderation
  moderationRules TerritoryModerationRule[]
  strikes         TerritoryStrike[]

  @@index([type])
  @@index([parentId])
  @@index([slug])
}

enum TerritoryType {
  CIRCLE  // 2-10 members - immediate family/best friends
  CLAN    // 10-50 members - extended family/friend groups
  TRIBE   // 50-500 members - community with governance
  NATION  // 500+ members - movement with elected leadership
  WORLD   // Platform-wide (system only)
}

model TerritoryMember {
  id           String              @id @default(uuid())
  territoryId  String
  userId       String
  role         TerritoryRole       @default(MEMBER)
  joinedAt     DateTime            @default(now())
  invitedById  String?
  
  // Status
  isMuted      Boolean             @default(false)
  strikeCount  Int                 @default(0)
  
  territory    Territory           @relation(fields: [territoryId], references: [id], onDelete: Cascade)
  
  @@unique([territoryId, userId])
  @@index([userId])
  @@index([territoryId])
}

enum TerritoryRole {
  MEMBER      // Regular member
  GUARDIAN    // Can moderate content
  ELDER       // Can set rules, invite members
  CHIEF       // Full admin - owner/founder
}

model TerritoryPost {
  id           String    @id @default(uuid())
  territoryId  String
  postId       String    // Reference to the main Post
  sharedById   String    // Who shared/posted to this territory
  createdAt    DateTime  @default(now())
  
  territory    Territory @relation(fields: [territoryId], references: [id], onDelete: Cascade)

  @@unique([territoryId, postId])
  @@index([territoryId])
}

// ============================================
// TERRITORY CONNECTIONS
// How territories relate to each other
// ============================================

model TerritoryConnection {
  id             String               @id @default(uuid())
  fromTerritoryId String
  toTerritoryId   String
  type           TerritoryConnectionType @default(OBSERVED)
  
  // What content flows between them
  shareContent   Boolean              @default(false)
  shareMembers   Boolean              @default(false)
  
  // Approval
  status         ConnectionStatus     @default(PENDING)
  requestedAt    DateTime             @default(now())
  approvedAt     DateTime?
  
  fromTerritory  Territory            @relation("ConnectionFrom", fields: [fromTerritoryId], references: [id], onDelete: Cascade)
  toTerritory    Territory            @relation("ConnectionTo", fields: [toTerritoryId], references: [id], onDelete: Cascade)

  @@unique([fromTerritoryId, toTerritoryId])
  @@index([fromTerritoryId])
  @@index([toTerritoryId])
}

enum TerritoryConnectionType {
  ALLIED      // Full mutual visibility, shared content pools
  FEDERATED   // Selective sharing, each admin controls what flows
  OBSERVED    // One-way view (like following)
  BLOCKED     // No interaction
}

enum ConnectionStatus {
  PENDING
  APPROVED
  REJECTED
}

// ============================================
// ALGORITHM SETTINGS PER TERRITORY
// Each territory owns its own algorithm
// ============================================

model TerritoryAlgorithmSettings {
  id           String    @id @default(uuid())
  territoryId  String    @unique
  
  // Content Prioritization Weights (0-100)
  recencyWeight     Int      @default(50)   // How much recent content matters
  engagementWeight  Int      @default(30)   // Likes/comments importance
  familiarityWeight Int      @default(60)   // Content from closer circles
  noveltyWeight     Int      @default(20)   // New/diverse content
  
  // Content Filtering
  contentRatings    String[] @default(["G", "PG", "PG13"]) // Allowed ratings
  
  // Interaction Rules
  whoCanPost        PostPermission @default(MEMBERS)
  whoCanComment     PostPermission @default(MEMBERS)
  whoCanInvite      PostPermission @default(ELDERS)
  allowCrossPosting Boolean        @default(false)
  
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  
  territory    Territory @relation(fields: [territoryId], references: [id], onDelete: Cascade)
}

enum PostPermission {
  ANYONE
  MEMBERS
  GUARDIANS
  ELDERS
  CHIEFS
}

// ============================================
// MODERATION RULES PER TERRITORY
// ============================================

model TerritoryModerationRule {
  id           String    @id @default(uuid())
  territoryId  String
  title        String
  description  String    @db.Text
  type         RuleType
  
  // For keyword rules
  keywords     String[]  @default([])
  
  // Action when triggered
  action       RuleAction @default(FLAG)
  
  isActive     Boolean   @default(true)
  order        Int       @default(0)
  createdAt    DateTime  @default(now())
  
  territory    Territory @relation(fields: [territoryId], references: [id], onDelete: Cascade)

  @@index([territoryId])
}

enum RuleType {
  KEYWORD_FILTER    // Ban/flag certain words
  CONTENT_RATING    // Enforce content ratings
  SPAM_DETECTION    // Auto-detect spam
  CUSTOM            // Custom rule defined by admins
}

enum RuleAction {
  FLAG              // Flag for review
  HIDE              // Auto-hide content
  DELETE            // Auto-delete
  WARN              // Warn the poster
  STRIKE            // Issue a strike
}

// ============================================
// STRIKE SYSTEM PER TERRITORY
// ============================================

model TerritoryStrike {
  id           String       @id @default(uuid())
  territoryId  String
  userId       String       // User who received the strike
  issuedById   String       // Admin/moderator who issued it
  reason       String       @db.Text
  postId       String?      // Related post if applicable
  
  // Expiration
  expiresAt    DateTime?    // Null = permanent
  isActive     Boolean      @default(true)
  
  createdAt    DateTime     @default(now())
  
  territory    Territory    @relation(fields: [territoryId], references: [id], onDelete: Cascade)

  @@index([territoryId])
  @@index([userId])
}
