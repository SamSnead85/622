# ============================================
# CARAVAN PRODUCTION ENVIRONMENT
# ============================================

# Database (Railway PostgreSQL)
DATABASE_URL="postgresql://postgres:password@localhost:5432/caravan?schema=public"

# JWT Authentication
JWT_SECRET="CHANGE-ME-generate-with-openssl-rand-base64-32"
JWT_EXPIRES_IN="7d"

# Server
PORT=5180
NODE_ENV=production
CORS_ORIGIN="https://your-domain.com"

# Media Storage (Choose One)
# Option A: AWS S3
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET="caravan-media"

# Option B: Cloudflare R2 (S3-compatible, recommended)
# R2_ACCESS_KEY_ID=""
# R2_SECRET_ACCESS_KEY=""
# R2_ENDPOINT="https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com"
# R2_BUCKET="caravan-media"

# Redis for caching & real-time (Upstash recommended)
REDIS_URL="redis://localhost:6379"

# OAuth (Optional - add when ready)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
APPLE_CLIENT_ID=""
APPLE_TEAM_ID=""
APPLE_KEY_ID=""

# Push Notifications (for mobile)
EXPO_ACCESS_TOKEN=""

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
